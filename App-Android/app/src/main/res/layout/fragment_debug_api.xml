<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT: Panel de Debug/Desarrollo
    UbicaciÃ³n: res/layout/fragment_debug_api.xml
    FunciÃ³n: Pruebas de API separadas del home principal
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <!-- APP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_red"
            app:title="ðŸ”§ Panel de Desarrollo"
            app:titleTextColor="@color/text_on_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/text_on_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENIDO -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ADVERTENCIA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardCornerRadius="8dp"
                app:strokeColor="#FF9800"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Panel de desarrollo. Solo visible en modo debug."
                        android:textColor="#E65100"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- PRUEBAS DE BACKEND -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”— Pruebas de Backend"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- BOTONES DE PRUEBA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/btnTestConnection"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Conectar"
                            android:textSize="12sp"
                            app:strokeColor="@color/accent_primary" />

                        <Button
                            android:id="@+id/btnHealthCheck"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="Health"
                            android:textSize="12sp"
                            app:strokeColor="@color/accent_primary" />

                        <Button
                            android:id="@+id/btnEchoTest"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Echo"
                            android:textSize="12sp"
                            app:strokeColor="@color/accent_primary" />

                    </LinearLayout>

                    <!-- INDICADOR DE ESTADO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:background="@drawable/rounded_background">

                        <View
                            android:id="@+id/indicadorEstado"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_gray"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvEstadoConexion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin conexiÃ³n"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- PRUEBAS DE API EXTERNA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ API Externa (Tasas de Cambio)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btnTestApiExterna"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Probar API de Monedas"
                        app:strokeColor="@color/accent_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- RESULTADO API EXTERNA -->
                    <TextView
                        android:id="@+id/tvResultadoApiExterna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No probado aÃºn"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:background="@color/background_tertiary"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- RESULTADO DE PRUEBAS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Resultado de Pruebas"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- PROGRESS BAR -->
                    <ProgressBar
                        android:id="@+id/progressApi"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        android:indeterminateTint="@color/accent_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="true" />

                    <!-- ÃREA DE RESULTADO -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/background_tertiary">

                        <TextView
                            android:id="@+id/tvApiResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ejecuta una prueba para ver los resultados..."
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:padding="12dp"
                            android:fontFamily="monospace" />

                    </ScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>